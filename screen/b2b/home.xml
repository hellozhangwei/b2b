<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="false">

    <transition name="addToCart">
        <actions>
            <service-call name="mantle.order.OrderServices.add#OrderProductQuantity" out-map="addOut"
                    in-map="defaultOrderParameters + [productId:productId, quantity:quantity]"/>
            <set field="ec.web.sessionAttributes.cartOrderId" from="addOut.orderId"/>
        </actions>
        <default-response url="../Order/Cart"/>
        <error-response url="."/>
    </transition>

    <actions>
        <entity-find entity-name="ProductStoreCategory" list="pscList" cache="true">
            <date-filter/><econdition field-name="productStoreId"/>
            <econdition field-name="storeCategoryTypeEnumId" value="PsctHomePage"/>
        </entity-find>

        <service-call name="popstore.ProductServices.get#CategoryInfo" out-map="browseRootCategoryInfo"
                      in-map="[productCategoryId:browseRootCategoryId]"/>

        <set field="productCategoryId" from="pscList?.getAt(0)?.productCategoryId"/>
        <entity-find entity-name="ProductCategoryMemberProduct" list="pcmpList">
            <search-form-inputs/>
            <date-filter/><econdition field-name="productCategoryId" from="productCategoryId"/>
            <order-by field-name="sequenceNum"/><order-by field-name="productName"/>
        </entity-find>
    </actions>
    <widgets>
        <!-- <label text="POP Commerce Home Page" type="h1"/> -->
